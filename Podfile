# pod repo update
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'
use_frameworks!

target 'bbh' do
    
    pod 'SnapKit', '~> 4.0'             # 布局框架 https://github.com/SnapKit/SnapKit，同 Masonry
    pod 'Alamofire', '~> 4.5.0'         # 数据请求 https://github.com/Alamofire/Alamofire，同 AFNetworking
    pod 'SwiftyJSON', '~> 3.1.4'        # json 解析 https://github.com/SwiftyJSON/SwiftyJSON
    pod 'CocoaSecurity'
    pod 'AFNetworking', '~> 2.6'        # 网络库 https://github.com/AFNetworking/AFNetworking.git
    pod 'JGProgressHUD'
    pod 'Whisper'                       # 通知 https://github.com/hyperoslo/Whisper.git
    pod 'SwiftTheme'                    # 主题替换方案 https://github.com/jiecao-fm/SwiftTheme
    pod 'IBAnimatable'                  # 设计原型，自定义 UI，交互，导航，转场和动画 https://github.com/IBAnimatable/IBAnimatable
    pod 'RxSwift', '4.0.0-rc.0'         # 响应式编程框架 https://github.com/ReactiveX/RxSwift
    pod 'RxCocoa', '4.0.0-rc.0'         # 响应式编程框架 https://github.com/ReactiveX/RxSwift
    pod 'Kingfisher', '~> 4.1'          # 缓存图片 https://github.com/onevcat/Kingfisher，同 SDWebImage
    pod 'SVProgressHUD', '~> 2.2'       # 提示功能 https://github.com/SVProgressHUD/SVProgressHUD
    pod 'BMPlayer', '~> 1.0'            # 视频播放框架 https://github.com/BrikerMan/BMPlayer
    # pod 'LeanCloud', '~> 10.1'        # 云存储功能，可作为后台，模拟登录 https://leancloud.cn/docs/sdk_down.html
    pod 'MJRefresh', '~> 3.1'           # 上拉和下拉刷新框架 https://github.com/CoderMJLee/MJRefresh
    
end
